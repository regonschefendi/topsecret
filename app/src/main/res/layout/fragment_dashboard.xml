<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- News Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/newsImage1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_background" />

            <TextView
                android:id="@+id/newsHeadline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/newsSummary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary 1"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/readMore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read more"
                android:textSize="14sp"
                android:textColor="#007BFF"
                android:layout_marginTop="8dp"
                android:textStyle="italic"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- News Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/newsImage2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_background" />

            <TextView
                android:id="@+id/newsHeadline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headline 2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/newsSummary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary 2"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/readMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read more"
                android:textSize="14sp"
                android:textColor="#007BFF"
                android:layout_marginTop="8dp"
                android:textStyle="italic"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- You can add more news items similarly -->

    </LinearLayout>
</ScrollView>
